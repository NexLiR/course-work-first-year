<UserControl x:Class="Project.Assets.UserControls.BasicEnemyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.Assets.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="70">
    <Grid>
        <Rectangle Width="70" RenderTransformOrigin="0.5,0.5" Margin="-2,2,2,2">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="270"/>
                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <ImageBrush ImageSource="\Project;component\Assets\Textures\basic-enemy.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <ProgressBar Margin="71,0,-71,65" x:Name="HPBar" BorderBrush="Transparent" Foreground="Red">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="90"/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
    </Grid>
</UserControl>
